---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-grow flex-col">
    <main>
      <div class="mx-auto block w-11/12 max-w-3xl px-4 py-12 font-serif">
        <slot />
      </div>
    </main>
  </body>
</html>
